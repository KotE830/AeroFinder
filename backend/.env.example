# .env 에 넣을 변수 목록 (복사해서 .env 로 쓰면 됨)
# PostgreSQL (필수)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/aerofinder

# 크롤러
CRAWL_INTERVAL_SECONDS=300
HTTP_TIMEOUT_SECONDS=30

# EasyOCR
EASYOCR_LANGUAGES=ko,en
EASYOCR_GPU=false

# LLM (이미지 파편 텍스트용, 선택)
# GOOGLE_API_KEY=
# OPENAI_API_KEY=
USE_LLM_FOR_FRAGMENTED_TEXT=true

# CORS
CORS_ORIGINS=*

# 서버
HOST=0.0.0.0
PORT=8000
